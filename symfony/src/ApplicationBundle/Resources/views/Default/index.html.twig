{% extends 'ApplicationBundle::base.html.twig' %}

{% block content %}
    {% if success is defined %}
        <div class="success">Thank you for your application! Email was sent</div>
    {% endif %}
    {% if validation_error is defined %}
        <div class="error">Please enter valid information</div>
    {% endif %}
    <h4>Submit your application</h4>
    {{ form_start(form, {'action': path('ApplicationBundle_default_create'), 'method': 'POST'}) }}
    {{ form_widget(form) }}
    {{ form_end(form) }}
    <a class="save btn" href="{{ path('ApplicationBundle_default_admin') }}">Secured Area</a>
{% endblock %}